MENUCOLOR=" is empty. Do what?"=none
MENUCOLOR="Put something into .*"=none
MENUCOLOR="Take something out of .*"=none

# Autopickup exceptions
# >patter : don't pick up items matched by pattern
# <pattern : pick up items matched by pattern
# * : wildcard for any number of characters
# ? : wildcard for exactly one character
# > overrides <

# don't pick up empty wands
AUTOPICKUP_EXCEPTION=">* named empty"

# name things junk to override other rules
AUTOPICKUP_EXCEPTION=">* junk"

